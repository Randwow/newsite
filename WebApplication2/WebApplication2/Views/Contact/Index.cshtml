@using System.Web.Optimization

@{
    Layout = "~/Views/Shared/_Layout_Contact.cshtml";
    ViewBag.Title = "Index";
}


@model WebApplication2.Models.SendMailDto
@Html.ValidationSummary(true)
@using (Html.BeginForm("Index", "Contact", FormMethod.Post, new { @id = "ContactForm" }))
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <div class="form-group">
        @Html.LabelFor(m => m.Name)
        @Html.TextBoxFor(m => m.Name, new { @class = "form-control", @placeholder = "Enter your name" })
        @Html.ValidationMessageFor(m => m.Name, "", new { @class = "text-danger" })
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Subject)
        @Html.TextBoxFor(m => m.Subject, new { @class = "form-control", @placeholder = "Enter your subject" })
        @Html.ValidationMessageFor(m => m.Subject, "", new { @class = "text-danger" })
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Message)
        @Html.TextAreaFor(m => m.Message, new { @class = "form-control", @placeholder = "Enter your message" })
        @Html.ValidationMessageFor(m => m.Message, "", new { @class = "text-danger" })
    </div>
    <button type="submit" class="btn btn-primary">Send Mail</button>

}